BootStrap: docker
From: ubuntu:16.04


%startscript
   /opt/dropbox/dropboxd

%runscript
   /opt/drobox/dropboxd

%post
  apt update -y
  apt install -y wget curl

  mkdir /opt/dropbox
  cd /opt/dropbox

  curl -Lo dropbox-linux-x86_64.tar.gz https://www.dropbox.com/download?plat=lnx.x86_64

  tar xzfv dropbox-linux-x86_64.tar.gz --strip 1 -C /opt/dropbox
